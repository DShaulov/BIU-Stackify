<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBlack"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="171dp"
        android:layout_height="145dp"
        android:layout_marginTop="128dp"
        android:src="@mipmap/ic_launcher_3_darker"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/blankBtn"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_rectangle"
        android:text="Blank Solution"
        android:textColor="@color/appBlack"
        app:backgroundTint="@color/appGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadBtn"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/uploadBtn"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:background="@drawable/rounded_rectangle"
        android:text="Upload CSV"
        android:textColor="@color/appBlack"
        app:backgroundTint="@color/appGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/prevSolsBtn"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_rectangle"

        android:text="Previous Solutions"
        android:textColor="@color/appBlack"
        app:backgroundTint="@color/appGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blankBtn"
        app:layout_constraintWidth_percent="0.5" />

    <ImageButton
        android:id="@+id/threeDotBtn"
        android:layout_width="59dp"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/appBlack"
        android:clickable="true"
        android:src="@drawable/ic_three_dots_small_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>