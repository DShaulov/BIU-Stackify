<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg">

    <EditText
        android:id="@+id/enterBoxNumEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/appGreen"
        android:ems="10"
        android:hint=" *Box Number"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColor="@color/appGreen"
        android:textColorHint="@color/appGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterSegmentNumEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/appGreen"
        android:ems="10"
        android:hint=" *Segment"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColor="@color/appGreen"
        android:textColorHint="@color/appGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterBoxNumEditText" />


    <EditText
        android:id="@+id/enterHorizontalPosEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/appGreen"
        android:ems="10"
        android:hint=" *Horizontal Position"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textColor="@color/appGreen"
        android:textColorHint="@color/appGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterSegmentNumEditText" />

    <EditText
        android:id="@+id/enterVerticalPosEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/appGreen"
        android:textColor="@color/appGreen"
        android:textColorHint="@color/appGreen"
        android:ems="10"
        android:hint=" *Vertical Position"
        android:inputType="numberSigned"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterHorizontalPosEditText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rearrangeOkBtn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/appGreen"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterVerticalPosEditText" />




</androidx.constraintlayout.widget.ConstraintLayout>